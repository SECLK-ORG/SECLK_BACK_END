<%- include('./includes/header.ejs') %>

<div
  style="
    margin: 0 auto;
    padding: 30px;
    font-family: Arial, sans-serif;
    border: 1px solid #ddd;
    background-color: #f9f9f9;
  "
>
  <h3 style="color: #003A75; font-size: 22px; margin-bottom: 20px;">Hello, <%= name %></h3>
  <p style="color: #555; line-height: 1.6; margin-bottom: 20px;">
    Welcome to SE Consultants! You have been added to our system.
  </p>
  <p style="color: #555; line-height: 1.6; margin-bottom: 20px;">
    Please click the button below to set your password.
  </p>

  <a href="<%= url %>" style="
    display: inline-block;
    background: #003A75;
    color: #fff;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
    font-size: 16px;
    font-weight: bold;
    text-align: center;
    margin-bottom: 20px;
  ">Set Password</a>

  <p style="color: #003A75; font-weight: bold; margin-bottom: 20px;">
    Best Regards,
  </p>
  <img src="cid:logo" alt="Logo" style="max-width: 150px; display: block; margin: 0 auto 20px;">
</div>

<%- include('./includes/footer.ejs') %>
