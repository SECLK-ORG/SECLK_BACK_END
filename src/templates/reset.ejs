<%- include('./includes/header.ejs') %>

<div style="
  margin: 0 auto;
  padding: 30px;
  font-family: Arial, sans-serif;
  max-width: 600px;
  border: 1px solid #ddd;
  border-radius: 8px;
  background-color: #f9f9f9;
">
  <h3 style="color: #003A75; font-size: 22px; margin-bottom: 20px;">Hello, <%= name %></h3>
  <p style="color: #555; line-height: 1.6; margin-bottom: 20px;">
    You have requested to reset your password for your SE Consultants account.
  </p>
  <p style="color: #555; line-height: 1.6; margin-bottom: 20px;">
    Please click the button below to set a new password:
  </p>

  <a href="<%= url %>" style="
    display: inline-block;
    background: #003A75;
    color: #fff;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
    font-size: 16px;
    font-weight: bold;
    text-align: center;
    margin-bottom: 20px;
  ">Reset Password</a>

  <p style="color: #555; line-height: 1.6; margin-bottom: 20px;">
    If you did not request a password reset, please ignore this email or contact our support team if you have any questions.
  </p>

  <p style="color: #003A75; font-weight: bold; margin-bottom: 20px;">
    Best Regards,
  </p>
  <img src="cid:logo" alt="Logo" style="max-width: 150px; display: block; margin: 0 auto;">
</div>

<%- include('./includes/footer.ejs') %>
